@page
@using ParimutuelCalculator
@model MyApp.Namespace.OddsModel
@{
}

<h1>Odds</h1>

<h2>Pool Totals</h2>

<div class="container">
    <div class="row">
        <div>
            Win: $@Model.Race.WinTotal
        </div>
        <div>
            Place: $@Model.Race.PlaceTotal
        </div>
        <div>
            Show: $@Model.Race.ShowTotal
        </div>
    </div>
    <div class="row py-5">
        @foreach (var horse in Model.Race.Horses)
        {
            <div class="col my-4">
                <div class="card h-100 text-center p-5">
                    <h4>Horse @horse.HorseNumber</h4>
                    @{ double odds = horse.CalculateOdds(Model.Race.WinTotal, BetType.win); }
                    Win Odds: @BettingMethods.DoubleToFraction(odds)
                </div>
            </div>
        }
    </div>
</div>