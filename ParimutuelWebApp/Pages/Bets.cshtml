@page
@model MyApp.Namespace.BetsModel
@{
}

<h1>Bets</h1>

<div class="container">
    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Horse</th>
            <th>Bet Type</th>
            <th>Amount</th>
            <th></th>
        </tr>
        @foreach (var bet in Model.Bets)
        {
            <tr>
                <td>@bet.Name</td>
                <td>@bet.Horse</td>
                <td>@bet.BetType</td>
                <td>$@String.Format("{0:0.00}", bet.Amount)</td>
                <td>
                    <form method="post">
                        <button asp-page-handler="Delete" asp-route-id="@bet.Id" 
                        onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger">Delete</button>
                     </form>
                </td>
            </tr>    
        }
    </table>
</div>

<a asp-page="./NewBet" class="btn btn-primary">Add New Bet</a>